# AI Provider Configuration
# Options: openai, claude, google
AI_PROVIDER=openai

# OpenAI API Key (required if AI_PROVIDER=openai)
OPENAI_API_KEY=sk-...

# Anthropic API Key (required if AI_PROVIDER=claude)
ANTHROPIC_API_KEY=sk-ant-...

# Google API Key (required if AI_PROVIDER=google)
GOOGLE_API_KEY=...

# Model Configuration (optional, defaults shown)
OPENAI_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o
CLAUDE_MODEL=claude-sonnet-4-20250514
GOOGLE_MODEL=gemini-1.5-pro

# Task-specific AI Configuration (optional - falls back to main AI_PROVIDER)
# STRUCTURE_EXTRACTOR_PROVIDER=openai
# STRUCTURE_EXTRACTOR_MODEL=gpt-4o
# CONTENT_SUMMARIZER_PROVIDER=claude
# CONTENT_SUMMARIZER_MODEL=claude-sonnet-4-20250514

# Atomization Settings
MAX_RECURSION_DEPTH=10
MIN_CONTENT_LENGTH_FOR_SPLIT=500

# Directory Configuration
OUTPUT_DIR=./output
UPLOADS_DIR=./uploads

# Processing Configuration
MAX_PAGES_PER_CHUNK=10
MAX_CONCURRENT_OCR=5

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
